<div class="container">
    <div class="row">
      <div class=" col-md-6 col-md-offset-3">

<h1>Editing Book</h1>

<%= form_for @book do |f| %>

  <%= render "devise/shared/error_messages", resource: @book %>

  <div class="field row">
    <%= f.label :Title %>
    <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "col-xs-12 book_title" %>
  </div>

  <div class="field row">
    <%= f.label :Body, "Opinion" %>
    <%= f.text_area :body, autofocus: true, autocomplete: "body", class: "col-xs-12 book_body" %>
  </div>

  <div class="actions row">
    <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
  </div>
<% end %>

  <div class="actions">
  <p><%= link_to "Show", book_path(@book) %>
    <span>|</span>
     <%= link_to "Back", books_path %></p>
  </div>

        </div>
    </div>
</div>
