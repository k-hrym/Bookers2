
<p class="notice"><%= notice %></p>

<%= render "devise/shared/error_messages", resource: @book %>
    <% if flash[:success] %>
      <div class="flash">
        <%= flash[:success] %>
      </div>
    <% end %>
<div class="row">

<div class="col-xs-3">
	<%= render 'users/info', user:@user %>
	<%= render 'books/new', book:@book %>
</div>
<div class="col-xs-9">
	<h2>Book detail</h2>
	<table class="table">

		<tbody>
			<tr>
				<td><%= link_to user_path(@book.user.id) do %>
						<%= attachment_image_tag @book.user, :profile_image, size: "40x40",class: "profile-thumb", fallback: "no_image.jpg" %><br><%= @book.user.name %>
					<% end %>
				</td>
				<td><%= @book.title %></td>
				<td><%= @book.body %></td>
			<% if @book.user == current_user %>
				<td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success" %></td>
				<td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn-sm btn-danger" %></td>
			<% end %>
			</tr>
		</tbody>
	</table>
</div>
</div>
