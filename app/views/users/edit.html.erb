<h2>User info</h2>

<%= form_for @user do |f| %>

  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div>
    <%= f.label :profile_image, "Image" %>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
  </div>

  <div class="field">
    <%= f.label :introduction, "Introduction" %>
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>

  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>
