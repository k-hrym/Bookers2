<p class="notice"><%= notice %></p>

<%= render "devise/shared/error_messages", resource: @book %>
    <% if flash[:success] %>
      <div class="flash">
        <%= flash[:success] %>
      </div>
    <% end %>
<div class="row">

<div class="col-xs-3">
	<%= render 'users/info', user:@user %>
	<%= render 'books/new', book:@book %>
</div>
<div class="col-xs-9">
	<h2>Users</h2>
	<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= attachment_image_tag user, :profile_image, size: "40x40",class: "pull-left profile-thumb", fallback: "no_image.jpg" %></td>
				<td><%= user.name %></td>
				<td><%= link_to "show", user_path(user.id) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

</div>
