
<p class="notice"><%= notice %></p>
<%= render "devise/shared/error_messages", resource: @book %>
    <% if flash[:success] %>
      <div class="flash">
        <%= flash[:success] %>
      </div>
    <% end %>

<div class="row">
<div class="col-xs-3">
	<%= render 'users/info', user:@user %>
	<%= render 'books/new', book:@book %>
</div>
<div class="col-xs-9">
	<h2>Books</h2>
	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @user.books.each do |book| %>
			<tr>
				<td><%= attachment_image_tag book.user, :profile_image, size: "40x40",class: "pull-left profile-thumb", fallback: "no_image.jpg" %></td>
				<td><%= link_to book_path(book) do %>
				    <%= book.title %></td>
				    <% end %></td>
				<td><%= book.body %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

</div>